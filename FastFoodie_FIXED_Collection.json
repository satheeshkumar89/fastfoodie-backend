    "item": [
        {
            "name": "üîê 1. Authentication (Start Here)",
            "item": [
                {
                    "name": "1. Send OTP",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.data && jsonData.data.otp) {",
                                    "        pm.collectionVariables.set('otp_code', jsonData.data.otp);",
                                    "        console.log('‚úì OTP:', jsonData.data.otp);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone_number\": \"{{phone_number}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/send-otp",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "send-otp"
                            ]
                        }
                    }
                },
                {
                    "name": "2. Verify OTP",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.collectionVariables.set('access_token', jsonData.access_token);",
                                    "    console.log('‚úì Token saved');",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone_number\": \"{{phone_number}}\",\n  \"otp_code\": \"{{otp_code}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/verify-otp",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "verify-otp"
                            ]
                        }
                    }
                }
            ]
