{
    "info": {
        "_postman_id": "fastfoodie-api-collection",
        "name": "FastFoodie Restaurant Partner API",
        "description": "Complete API collection for FastFoodie restaurant partner application with Firebase OTP authentication",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{access_token}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000",
            "type": "string"
        },
        {
            "key": "access_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "phone_number",
            "value": "+918668198712",
            "type": "string"
        },
        {
            "key": "otp_code",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Send OTP",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.data && jsonData.data.otp) {",
                                    "        pm.collectionVariables.set('otp_code', jsonData.data.otp);",
                                    "        console.log('OTP saved:', jsonData.data.otp);",
                                    "    }",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone_number\": \"{{phone_number}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/send-otp",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "send-otp"
                            ]
                        },
                        "description": "Send OTP to phone number. In development mode, OTP is returned in response."
                    },
                    "response": []
                },
                {
                    "name": "Verify OTP",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.collectionVariables.set('access_token', jsonData.access_token);",
                                    "    console.log('Access token saved');",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone_number\": \"{{phone_number}}\",\n  \"otp_code\": \"{{otp_code}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/verify-otp",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "verify-otp"
                            ]
                        },
                        "description": "Verify OTP and get JWT access token"
                    },
                    "response": []
                },
                {
                    "name": "Resend OTP",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone_number\": \"{{phone_number}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/resend-otp",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "resend-otp"
                            ]
                        }
                    },
                    "response": []
                }
            ],
            "description": "Authentication endpoints using Firebase OTP"
        },
