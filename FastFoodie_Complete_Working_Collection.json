            "item": [
                {
                    "name": "Send OTP",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.data && jsonData.data.otp) {",
                                    "        pm.collectionVariables.set('otp_code', jsonData.data.otp);",
                                    "        console.log('‚úì OTP saved:', jsonData.data.otp);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"phone_number\": \"{{phone_number}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/send-otp",
